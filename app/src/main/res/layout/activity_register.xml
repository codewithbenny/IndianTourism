<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#e6f9ff"
    tools:context=".Guide.Tourist.RegisterActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"

        android:background="@drawable/linear_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/camera"
            android:background="@drawable/linear_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indian Tourism"
            android:gravity="center"

            android:textSize="40dp"
            android:textStyle="bold"
            android:fontFamily="@font/caveat"></TextView>


    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="6"
       >
    <EditText
        android:id="@+id/input_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Name"
        android:layout_above="@+id/input_language_register"
         android:inputType="text"
        android:textSize="17dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_id_card"
        android:fontFamily="@font/montserrat"
        android:drawablePadding="10dp"
        />
    <EditText
        android:id="@+id/input_language_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Your Language"
        android:layout_above="@+id/input_phn_register"
        android:inputType="text"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_language"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat"
        />
    <EditText
        android:id="@+id/input_phn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/input_password_register"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Phone Number"
        android:maxLength="10"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_iphone"
        android:drawablePadding="10dp"
        android:fontFamily="@font/montserrat"
        />
    <EditText
        android:id="@+id/input_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/CreateAccountbtn"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_lock"
        />

    <Button

        android:id="@+id/CreateAccountbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_layout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:layout_centerInParent="true"
        android:padding="17dp"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:text="Create Account"
        android:fontFamily="@font/montserrat"
        />
   </RelativeLayout>

</LinearLayout>
