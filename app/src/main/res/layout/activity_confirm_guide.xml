<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#e6f9ff"
    tools:context=".Guide.Tourist.ConfirmGuide">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar12123"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/toolbar"/>
   <EditText
       android:id="@+id/dateofvisit"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginTop="50dp"
       android:fontFamily="@font/montserrat"
       android:hint="Enter date of visit"
       android:textAlignment="center"
       android:editable="false"
       android:clickable="true"
       android:layout_margin="20dp"></EditText>
    <EditText
        android:id="@+id/goingtovisit"
        android:layout_width="match_parent"
        android:fontFamily="@font/montserrat"
        android:hint="Enter no of Peoples going to visit"
        android:textAlignment="center"
        android:maxLength="1"
        android:layout_height="50dp"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/message1"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/Confirmguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Confirm Book"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/button_layout"/>

</LinearLayout>