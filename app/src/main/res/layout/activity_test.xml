<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e6f9ff"
    android:layout_height="match_parent"
    tools:context=".TestActivity">
        <RelativeLayout
            android:id="@+id/relativelayout57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:layout_alignParentStart="true">
           <Toolbar
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               >
               <ImageView
                   android:id="@+id/nsearch1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:src="@drawable/ic_search_black_24dp"
                   android:layout_gravity="end"
                   android:layout_marginRight="20dp"/>



               <EditText
                android:id="@+id/search_edit_test"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="40dp"
                android:hint="Search"
                   android:visibility="gone"
                android:inputType="textCapSentences"
                android:background="@drawable/search"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat"
                app:et_supportMaxLines="1"
                android:textSize="20sp"
                   android:paddingLeft="10dp"
                android:textColorHint="@color/colorPrimaryDark"


                />
           </Toolbar>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_below="@id/relativelayout57"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/noguide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="No more Guide Available But Added soon"
            android:fontFamily="@font/montserrat"
            />

</RelativeLayout>